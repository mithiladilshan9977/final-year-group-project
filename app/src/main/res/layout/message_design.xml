<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
     app:cardBackgroundColor="@color/very_low_color_brown"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/user_email"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="apple@gmail.com"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/messgaesentdate"

            android:text="Date : "
            />

        <TextView
            android:id="@+id/user_message_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:20:50"
            app:layout_constraintStart_toEndOf="@+id/messgaesentdate"
           />


        <TextView
            android:background="@color/textmessageBG"
            android:layout_width="match_parent"
            android:id="@+id/user_message"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
           android:padding="10dp"
           app:layout_constraintTop_toBottomOf="@+id/user_message_date_time"
            android:text="Hellow"/>



        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:src="@drawable/applogo"
            android:id="@+id/send_image"
            app:layout_constraintEnd_toEndOf="@+id/user_message_date_time"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>